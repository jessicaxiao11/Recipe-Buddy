{
  "name": "Recipe Buddy",
  "description": "This extension allows you to interact with static website recipes and add them to your weekly planner.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "css": ["popup.css"],
      "js": ["popup.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["images/*"],
    "matches": ["http://*/*", "https://*/*"],
    "extension_ids": []
    }]
}